<ui:Page
    x:Class="GenX.Client.Pages.SettingsContent.SettingsTheme"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="SettingsTheme"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding SettingsThemeContent, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <ui:ScrollViewerEx
            x:Name="contentSV"
            ui:FocusVisualHelper.UseSystemFocusVisuals="False"
            IsTabStop="False"
            VerticalScrollBarVisibility="Auto">
            <ikw:SimpleStackPanel Spacing="4">

                <ui:SettingsCard Description="{Tr AppThemeSettingsDesc}" Header="{Tr AppThemeSettingsCard}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Color}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox
                        x:Name="themeMode"
                        ItemsSource="{Binding Themes}"
                        SelectedItem="{Binding SelectedTheme}" />
                </ui:SettingsCard>

                <ui:SettingsCard Description="{Tr AppAccentSettingsDesc}" Header="{Tr AppAccentSettingsCard}">

                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Color}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ListView SelectedItem="{Binding SelectedAccentColor}">
                        <ListView.ItemsSource>
                            <x:Array Type="{x:Type Color}">
                                <Color>#a4c400</Color>
                                <Color>#60a917</Color>
                                <Color>#339933</Color>
                                <Color>#008a00</Color>
                                <Color>#00aba9</Color>
                                <Color>#1ba1e2</Color>
                                <Color>#3399ff</Color>
                                <Color>#0050ef</Color>
                                <Color>#6a00ff</Color>
                                <Color>#aa00ff</Color>
                                <Color>#f472d0</Color>
                                <Color>#ff0097</Color>
                                <Color>#d80073</Color>
                                <Color>#a20025</Color>
                                <Color>#e51400</Color>
                                <Color>#ff4500</Color>
                                <Color>#fa6800</Color>
                                <Color>#f09609</Color>
                                <Color>#f0a30a</Color>
                                <Color>#e3c800</Color>
                                <Color>#825a2c</Color>
                                <Color>#6d8764</Color>
                                <Color>#647687</Color>
                                <Color>#76608a</Color>
                                <Color>#87794e</Color>
                            </x:Array>
                        </ListView.ItemsSource>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ikw:VirtualizingWrapPanel
                                    Width="400"
                                    ItemSize="60,50"
                                    Orientation="Horizontal"
                                    SpacingMode="Uniform"
                                    StretchItems="True" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Rectangle
                                    Width="40"
                                    Height="40"
                                    Margin="1">
                                    <Rectangle.Fill>
                                        <SolidColorBrush x:Name="Brush" Color="{Binding}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ui:SettingsCard>
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
    </Grid>
</ui:Page>