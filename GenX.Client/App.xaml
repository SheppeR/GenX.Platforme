<Application
    x:Class="GenX.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:viewModels="clr-namespace:GenX.Client.ViewModels"
    xmlns:xamlFlair="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
    d1p1:Ignorable="d"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <xamlFlair:XamlFlairResources />
                <ui:ThemeResources
                    AccentColor="#A534F6"
                    CanBeAccessedAcrossThreads="False"
                    RequestedTheme="Dark" />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="/GenX.Common;component/Helpers/Converters/Converters.xaml" />
                <ResourceDictionary Source="/Assets/NotifyIconResources.xaml" />
                <ResourceDictionary Source="/Assets/Animations.xaml" />


            </ResourceDictionary.MergedDictionaries>
            <viewModels:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />

            <Thickness x:Key="NavigationViewHeaderMargin">20,10,0,0</Thickness>

            <SolidColorBrush x:Key="ListViewItemBackground" Color="{StaticResource LayerFillColorAlt}" />
            <!--<SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ApplicationPageBackgroundThemeBrushKey}" Color="#2B2B2B"/>-->

            <Style x:Key="SettingsTitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="{DynamicResource TextControlHeaderForeground}" />
            </Style>

            <Thickness x:Key="AppBarButtonContentViewboxCollapsedMargin">10,10,10,10</Thickness>
        </ResourceDictionary>
    </Application.Resources>
</Application>